###
# aliases: Global aliases that should not depende on system or distro (as much as possible)
#
# there are a number of system specific aliases files as well (bash_aliases, arch_aliases)
###

###
# Dotfile Management
###

alias config='/usr/bin/git --git-dir=$DOTFILES --work-tree=$HOME'

###
# Aplications
###

alias v="$EDITOR"
alias e="$EDITOR"
alias r="ranger"
alias sr="sudo ranger"
alias g="git"

###
# Shortcuts for common folders
###

alias d="cd $DATA"
alias doc="cd $DATA/documents"
alias dev="cd $DEVELOPMENT"
alias proj="cd $DATA/documents/projects"
alias dr="cd $DATA/cloud/Dropbox"
alias dl="cd $HOME/Downloads"

###
# Easier navigation 
###

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -" # is used by just one - 

###
# System Maintainence
###

alias sudo="sudo "
alias hosts='sudo $EDITOR /etc/hosts'

###
# Networking
###

###
# To Organize 
###
alias c="clear"
alias SS="sudo systemctl"
alias ka="killall"
alias mkd="mkdir -pv"

# Adding color
alias ls='ls -lhN --color=auto --group-directories-first'
alias la='ls -lhaN --color=auto --group-directories-first'
alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias ccat="highlight --out-format=ansi" # Color cat - print file with syntax highlighting.


